{
  "private": true,
  "type": "module",
  "name": "govuk-brand-guidelines",
  "description": "GOV.UK brand guidelines website.",
  "scripts": {
    "start": "npm run clean && npx @11ty/eleventy --serve",
    "build": "npm run clean && npx @11ty/eleventy",
    "clean": "rimraf -I _site",
    "lint:scss": "npm run lint:scss:cli -- '**/*.scss'",
    "lint:scss:cli": "stylelint --cache --cache-location .cache/stylelint --cache-strategy content --color --ignore-path .gitignore --max-warnings 0",
    "lint:html": "html-validate \"_site/**/*.html\"",
    "lint:svg": "npm run lint:svg:cli \"src/**/*.svg\"",
    "lint:svg:cli": "svglint --config svglint.config.js",
    "lint:js": "npm run lint:js:cli -- \"**/*.{cjs,js,md,mjs}\"",
    "lint:js:cli": "eslint --cache --cache-location .cache/eslint --cache-strategy content --color",
    "lint:prettier": "npm run lint:prettier:cli -- \"**/*.{cjs,js,json,md,mjs,scss,yaml,yml}\"",
    "lint:prettier:cli": "prettier --cache --cache-location .cache/prettier --cache-strategy content --check",
    "prepare": "husky",
    "check-links": "linkinator _site --recurse"
  },
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@eslint/compat": "^1.3.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.0",
    "csv": "^6.3.11",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-promise": "^7.2.1",
    "glob": "^11.0.3",
    "govuk-frontend": "^5.11.1",
    "gray-matter": "^4.0.3",
    "html-validate": "^9.7.1",
    "husky": "^9.1.7",
    "linkinator": "^6.1.4",
    "lint-staged": "^16.1.2",
    "markdown-it": "^14.1.0",
    "markdown-it-govuk": "^0.6.0",
    "neostandard": "^0.12.2",
    "nunjucks": "^3.2.4",
    "outdent": "^0.8.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "rollup": "^4.46.2",
    "sass": "^1.89.2",
    "slug": "^11.0.0",
    "stylelint": "^16.21.1",
    "stylelint-config-gds": "^2.0.0",
    "stylelint-order": "^7.0.0",
    "svglint": "^4.1.0"
  }
}

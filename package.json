{
  "private": true,
  "type": "module",
  "name": "govuk-brand-guidelines",
  "description": "GOV.UK brand guidelines website.",
  "engines": {
    "node": "^24.11.0",
    "npm": "^11.6.0"
  },
  "scripts": {
    "start": "npm run clean && npx nodemon --watch eleventy --exec 'npx @11ty/eleventy --serve'",
    "build": "npm run clean && npx @11ty/eleventy",
    "clean": "rimraf -I _site",
    "lint:scss": "npm run lint:scss:cli -- '**/*.scss'",
    "lint:scss:cli": "stylelint --cache --cache-location .cache/stylelint --cache-strategy content --color --ignore-path .gitignore --max-warnings 0",
    "lint:html": "html-validate \"_site/**/*.html\"",
    "lint:svg": "npm run lint:svg:cli \"src/**/*.svg\"",
    "lint:svg:cli": "svglint --config svglint.config.js",
    "lint:js": "npm run lint:js:cli -- \"**/*.{cjs,js,md,mjs}\"",
    "lint:js:cli": "eslint --cache --cache-location .cache/eslint --cache-strategy content --color",
    "lint:prettier": "npm run lint:prettier:cli -- \"**/*.{cjs,js,json,md,mjs,scss,yaml,yml}\"",
    "lint:prettier:cli": "prettier --cache --cache-location .cache/prettier --cache-strategy content --check",
    "prepare": "husky",
    "check-links": "linkinator _site --recurse"
  },
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@eslint/compat": "^2.0.0",
    "@rollup/plugin-babel": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "autoprefixer": "^10.4.22",
    "cssnano": "^7.1.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-promise": "^7.2.1",
    "glob": "^13.0.0",
    "globals": "^16.5.0",
    "govuk-frontend": "^5.13.0",
    "html-validate": "^10.4.0",
    "husky": "^9.1.7",
    "linkinator": "^7.5.0",
    "lint-staged": "^16.2.7",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-govuk": "^0.8.0",
    "neostandard": "^0.12.2",
    "nodemon": "^3.1.11",
    "nunjucks": "^3.2.4",
    "outdent": "^0.8.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.3",
    "rimraf": "^6.1.2",
    "rollup": "^4.53.3",
    "sass": "^1.94.2",
    "stylelint": "^16.26.1",
    "stylelint-config-gds": "^2.0.0",
    "stylelint-order": "^7.0.0",
    "svglint": "^4.1.2"
  },
  "dependencies": {
    "sharp": "^0.34.5"
  }
}

{% extends "govuk/template.njk" %}

{% block pageTitle %}
  {{- title -}}
{% endblock %}

{% block head %}
  {{ super() }}
  {#- Prevent search engine indexing for archive, preview and development builds -#}
  {% if site.env.CONTEXT !== "production" %}
    <meta name="robots" content="noindex, nofollow">
  {% endif %}
  <link rel="stylesheet" href="{{ '/assets/stylesheet.css' | url }}">
{% endblock %}

{% block header %}
  {% from "govuk/components/header/macro.njk" import govukHeader %}
  {% from "govuk/components/service-navigation/macro.njk" import govukServiceNavigation %}

  {{ govukHeader({
    productName: "Brand Guidelines"
  }) }}

  {{ govukServiceNavigation({
    navigation: collections.pages[0].data.children | asNavigationItems
  }) }}
{% endblock %}

{% block beforeContent %}
  {% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
  {%- if site.env.CONTEXT === "dev" %}
    {{ govukPhaseBanner({
      tag: {
        text: "Development",
        classes: "govuk-tag--red"
      }
    }) }}
  {%- elif site.env.PULL_REQUEST %}
    {{ govukPhaseBanner({
      tag: {
        text: "Preview",
        classes: "govuk-tag--light-blue"
      },
      html: 'This is a preview of <a class="govuk-link" href="https://github.com/alphagov/govuk-brand-guidelines/pull/' + site.env.REVIEW_ID + '">a proposed change</a> to the brand guidelines.'
    }) }}
    {%- elif site.env.CONTEXT === "production" %}
    {{ govukPhaseBanner({
      tag: {
        text: "Alpha"
      },
      text: "This is a new service. Help us improve it by giving your feedback."
    }) }}
  {%- endif %}
  {% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
  {{
    govukBreadcrumbs({
      items: ancestors | asNavigationItems
    })
  }}
{% endblock %}

{% macro appLinkList(pages) %}
  {% if pages | length %}
    <ul class="govuk-list">
      {% for child in pages %}
        <li>
          {% set ariaCurrent = child | ariaCurrentValue %}
          <a
            href="{{child.url | url}}"
            {% if ariaCurrent %}
            aria-current="{{ariaCurrent}}"
            {% endif %}
            >
            {{child.data.title}}
          </a>
          {{appLinkList(child.data.children)}}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
{% endmacro %}

{% block content %}
  <div class="govuk-grid-row">
    <nav class="govuk-grid-column-one-third">
      {{ appLinkList(sidebarNavigationRoot.data.children)}}
    </nav>
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{title}}</h1>
      {{ content | safe }}
    </div>
  </div>
{% endblock %}

{% block bodyEnd %}
<script type="module" src="{{ '/assets/app.js' | url }}"></script>
{% endblock %}

{% extends "govuk/template.njk" %}

{% block pageTitle %}
  {{- title -}}
{% endblock %}

{% block head %}
  {{ super() }}
  <link rel="stylesheet" href="{{ '/assets/stylesheet.css' | url }}">
{% endblock %}

{% block header %}
  {% from "govuk/components/header/macro.njk" import govukHeader %}
  {% from "govuk/components/service-navigation/macro.njk" import govukServiceNavigation %}

  {{ govukHeader({
    productName: "Brand Guidelines"
  }) }}
  {{ govukServiceNavigation({
    navigation: [
      { href: "#", text: "Graphic device" },
      { href: "#", text: "Logo" },
      { href: "#", text: "Colour" },
      { href: "#", text: "Typography" },
      { href: "#", text: "Visualising data" },
      { href: "#", text: "Brand in use" }
    ]
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      {{ content | safe }}
    </div>
  </div>
{% endblock %}

{% block bodyEnd %}
<script type="module" src="{{ '/assets/app.js' | url }}"></script>
{% endblock %}